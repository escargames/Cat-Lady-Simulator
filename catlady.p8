--
-- standard pico-8 workflow
--

config = {
    menu = {tl = "menu"},
    play = {tl = "play"},
    pause = {tl = "pause"},
}

function _init()
    state = "play"
    player = {x = 64, y = 64, spd = 1}
end

function _update()
     --if (state == "menu") then
       -- update_menu()
    if (state == "play") then
        update_play()
    --elseif (state == "pause") then
        --update_pause()
    end
end

function _draw()
    config[state].draw()
end

--
-- play state handling
--

function update_play()
    update_player()
end

--
-- walls
--

function wall(x,y)
    return fget(mget(x,y),0)
end

function wall_area(x,y,w,h)
    return
        wall(x-w,y-h) or
        wall(x+w,y-h) or
        wall(x-w,y+h) or
        wall(x+w,y+h)
end

--
-- player
--

function update_player()
    local x = player.x
    local y = player.y
    if btn(0) then
        x = player.x - player.spd
    elseif btn(1) then
        x = player.x + player.spd
    end
    
    if btn(2) then
        y = player.y - player.spd
    elseif btn(3) then
        y = player.y + player.spd
    end

    if not wall_area(x,y, 4, 4) then
        player.x = x
        player.y = y
    end
end

--
-- drawing
--
function draw_world()
    camera(player.x - 64, player.y - 64)
    cls()
    map(0,0,0,0,16,16)
    camera()
end

function draw_play()
    spr(3, player.x - 4, player.y - 4)
end

config.play.draw = function ()
    draw_world()
    draw_play()
end

