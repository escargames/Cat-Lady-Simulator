--
-- standard pico-8 workflow
--

config = {
    menu = {tl = "menu"},
    play = {tl = "play"},
    pause = {tl = "pause"},
}

function _init()
    state = "play"
    player = {x = 25, y = 25}
end

function _update()
     --if (state == "menu") then
       -- update_menu()
    if (state == "play") then
        update_play()
    --elseif (state == "pause") then
        --update_pause()
    end
end

function _draw()
    --config[state].draw()
    
    map(0,0,0,0,16,16)
    spr(3,player.x, player.y)
end

--
-- play state handling
--

function update_play()
    update_player()
end

--
-- player
--

function update_player()
     if btn(0) then
        player.x -= 1
    elseif btn(1) then
        player.x += 1
    elseif btn(2) then
        player.y -= 1
    elseif btn(3) then
        player.y += 1
    end
end

