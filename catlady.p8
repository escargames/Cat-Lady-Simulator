--
-- standard pico-8 workflow
--

function _init()
    player = {x = 25, y = 25}
end

function _update()
    if btn(0) then
        player.x -= 1
    elseif btn(1) then
        player.x += 1
    elseif btn(2) then
        player.y -= 1
    elseif btn(3) then
        player.y += 1
    end
end

function _draw()
    map(0,0,0,0,16,16)
    spr(3,player.x, player.y)
end


